# A generic personal profile settings file
# intended to be usable by mksh and bash

# Defaults
hn=$(hostname -s)
id=$(id -u)
P='$'
PATH='/local/bin:/bin'

# Special cases for root
if [ "$id" = '0' ] ; then
    P='#'
    PATH='/local/bin:/local/sbin:/bin:/sbin'
fi

set_ps1() {
    printf '%s | %s\n%s ' "$hn" "$PWD" "$P"
}

PS1='$(set_ps1)'
PS2=" > "

# export environment variables
export PATH
