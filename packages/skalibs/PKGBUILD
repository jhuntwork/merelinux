pkgname=(
    skalibs
    skalibs-leapsecs
    skalibs-dev
)
pkgver=2.3.10.0
pkgrel=1
pkgdesc='A library suite supporting skarnet.org software.'
arch=(x86_64)
url=http://skarnet.org/software/skalibs/
license=(ISC)
groups=(base)
depends=()
makedepends=()
options=()
changelog=ChangeLog

source=(
    "http://skarnet.org/software/skalibs/${pkgname}-${pkgver}.tar.gz"
)

sha256sums=(
    e4d5147941055b2a367794666f773a4b216c3ae83c015a5fcf2cd0498470ea44
)


build() {
    cd "${srcdir}/${pkgbase}-${pkgver}"
    sed -i 's@#!/bin/sh@#!/bin/bash@' configure
    ./configure \
      --prefix=/ \
      --disable-ipv6 \
      --enable-force-devr \
      --enable-tai-clock
    make $MAKEFLAGS
}

package_skalibs() {
    pkgfiles=(
        lib/libskarnet.so.*
    )
    depends=(
        musl
    )

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    find ${pkgfiles[@]} | cpio -dumpv "$pkgdir"
}

package_skalibs-leapsecs() {
    pkgfiles=(
        etc/leapsecs.dat
    )

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    find ${pkgfiles[@]} | cpio -dumpv "$pkgdir"
}

package_skalibs-dev() {
    pkgfiles=(
        include/skalibs
        lib/skalibs/sysdeps
        lib/libskarnet.a
        lib/libskarnet.so
    )
    depends=(
        skalibs
    )

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    mv lib/skalibs/libskarnet.a lib
    find ${pkgfiles[@]} | cpio -dumpv "$pkgdir"
}
