pkgname=(php php-fpm php-dev)
pkgver=5.6.26
memcachedver=2.2.0
mongover=1.6.14
yamlver=1.2.0
pkgrel=1
pkgdesc='The PHP scripting language'
arch=(x86_64)
url='http://www.php.net'
license=(PHP)
groups=(base)
depends=()
makedepends=(
    libcurl-dev
    libmemcached-dev
    libtool
    libxml2-dev
    libyaml-dev
    gettext
    libressl-dev
    pkgconf
    zlib-dev
)
options=()
changelog=ChangeLog

source=(
    "http://php.net/distributions/php-${pkgver}.tar.bz2"
    "https://pecl.php.net/get/memcached-${memcachedver}.tgz"
    "https://pecl.php.net/get/mongo-${mongover}.tgz"
    "https://pecl.php.net/get/yaml-${yamlver}.tgz"
    php-fpm-service
    php-fpm-log
    php-fpm.install
    php-fpm.conf
    php.ini
)
