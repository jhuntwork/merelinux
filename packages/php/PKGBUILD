build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    # Fix warnings about including sys/poll.h
    sed -i '/sys\/poll.h/s@sys/@@' main/php_network.h \
      sapi/cgi/fastcgi.c main/network.c sapi/fpm/fpm/fastcgi.c

    # memcached ext
    tar -xf "${srcdir}/memcached-${memcachedver}.tgz"
    mv "memcached-${memcachedver}" ext/memcached

    # mongo ext
    tar -xf "${srcdir}/mongo-${mongover}.tgz"
    mv "mongo-${mongover}" ext/mongo
    # Fix namespace collision with ext/hash
    sed -i -e 's@php_hash_copy(@php_hash_copy_m(@' \
           -e 's@php_hash_copy,@php_hash_copy_m,@' \
           ext/mongo/contrib/crypto.c

    # yaml ext
    tar -xf "${srcdir}/yaml-${yamlver}.tgz"
    mv "yaml-${yamlver}" ext/yaml

    rm configure
    ./buildconf --force

    sed -i 's@CURL_CONFIG --libs@CURL_CONFIG --static-libs@' configure
    CFLAGS="$CFLAGS -fPIC --static" \
    ./configure \
      --prefix=/ \
      --with-config-file-path=/etc/php \
      --disable-all \
      --disable-cgi \
      --disable-shared \
      --enable-static \
      --enable-cli \
      --enable-ctype \
      --enable-filter \
      --enable-fpm \
      --enable-hash \
      --enable-json \
      --enable-libxml \
      --enable-mbstring \
      --enable-mbregex \
      --enable-memcached \
      --disable-memcached-sasl \
      --enable-mongo \
      --enable-pdo \
      --enable-phar \
      --enable-session \
      --enable-simplexml \
      --enable-tokenizer \
      --enable-xml \
      --with-curl \
      --with-iconv \
      --with-gettext \
      --with-mysql=mysqlnd \
      --with-mysqli=mysqlnd \
      --with-pdo-mysql=mysqlnd \
      --with-openssl \
      --with-yaml \
      --with-zlib \
      ac_cv_crypt_des=no \
      ac_cv_crypt_ext_des=no
    make $MAKEFLAGS
}

package_php() {
    pkgfiles=(
        bin
    )
    options+=(upx)

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make INSTALL_ROOT="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    rm bin/php{-config,ize}
    # Fix broken symlink
    rm bin/phar
    ln -s phar.phar bin/phar
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}

package_php-fpm() {
    pkgfiles=(
        etc
        sbin
    )
    backup=(
        etc/php-fpm.conf
        etc/php.ini
    )
    options+=(upx)
    install=php-fpm.install

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make INSTALL_ROOT="${pkgdir}-tmp" install

    # Service files
    install -d "${pkgdir}/etc/s6/services/available/php-fpm/log"
    install -m 0754 "${srcdir}/php-fpm-service" \
        "${pkgdir}/etc/s6/services/available/php-fpm/run"
    install -m 0754 "${srcdir}/php-fpm-log" \
        "${pkgdir}/etc/s6/services/available/php-fpm/log/run"

    # Configuration
    install -m 0644 "${srcdir}/php-fpm.conf" \
        "${pkgdir}/etc/php-fpm.conf"
    install -m 0644 "${srcdir}/php.ini" \
        "${pkgdir}/etc/php.ini"

    cd "${pkgdir}-tmp"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}

package_php-dev() {
    depends=(
        php
    )
    pkgfiles=(
        bin/php-config
        bin/phpize
        include
        lib/php/build
    )

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make INSTALL_ROOT="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "${pkgdir}"
}
