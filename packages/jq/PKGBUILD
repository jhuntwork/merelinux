#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068

pkgname=(jq jq-dev)
pkgver=1.6
pkgrel=2
pkgdesc='A lightweight and flexible command-line JSON processor'
arch=(x86_64)
url='https://github.com/stedolan/jq'
license=(BSD)
groups=()
depends=()
makedepends=(libtool)
options=()
changelog=ChangeLog

source=(
    "${url}/releases/download/jq-${pkgver}/jq-${pkgver}.tar.gz"
)
sha256sums=(
    5de8c8e29aaa3fb9cc6b47bb27299f271354ebb72514e3accadc7d38b5bbaa72
)


build() {
    cd_unpacked_src
    autoreconf -i
    ./configure \
      --prefix=/usr \
      --enable-static \
      --disable-shared \
      --enable-all-static
    make
}

package_jq() {
    pkgfiles=(
        usr/bin/jq
        usr/share/man/man1
    )
    std_package
}

package_jq-dev() {
    pkgfiles=(
        usr/bin/onig-config
        usr/include
        usr/lib
    )
    std_split_package
}
