#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068
# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

pkgname=ghc
pkgver=8.0.2
pkgrel=1
pkgdesc='The Glasgow Haskell Compiler'
arch=('x86_64')
url='https://www.haskell.org/ghc/'
license=('BSD')
groups=('base')
depends=(gmp libffi musl)
makedepends=(
    ghc
    gmp-dev
    libffi-dev
    libncurses-dev
    perl
)
options=()
changelog=ChangeLog
source=(
    "http://downloads.haskell.org/~ghc/${pkgver}/ghc-${pkgver}-src.tar.xz"
)

sha256sums=(
    11625453e1d0686b3fa6739988f70ecac836cadc30b9f0c8b49ef9091d6118b1
)


build() {
    cd "${srcdir}/${pkgname}-${pkgver}" || return 1
    ./configure --prefix=''
    make
}

package() {
    pkgfiles=(
        bin
        lib
    )
    cd "${srcdir}/${pkgname}-${pkgver}" || return 1
    make DESTDIR="${pkgdirbase}/destdir" install
    rm -rf "${pkgdir}/share"
    cd "${pkgdirbase}/destdir" || return 1
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dumpv "$pkgdir"
}
