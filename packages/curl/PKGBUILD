# Maintainer: Jeremy Huntwork <jhuntwork@lightcubesolutions.com>

pkgname=(
    curl
    libcurl
    libcurl-dev
)
pkgver=7.54.0
pkgrel=1
pkgdesc='An API for writing text-based user interfaces.'
arch=(x86_64)
url='http://curl.haxx.se'
license=(GPL2)
groups=(base)
depends=()
makedepends=(libressl-dev perl zlib-dev)
options=()
changelog=ChangeLog

source=(
    "${url}/download/${pkgname}-${pkgver}.tar.bz2"
)
sha256sums=(
    f50ebaf43c507fa7cc32be4b8108fa8bbd0f5022e90794388f3c7694a302ff06
)


build() {
    cd "${srcdir}/${pkgbase}-${pkgver}"
    rm src/tool_hugehelp.c
    sed -i 's@poll.h@poll.h@g' $(grep -lr 'poll.h' .)
    CFLAGS="$CFLAGS -fPIC" \
    LDFLAGS='-Wl,-static' \
    ./configure \
      --prefix=/ \
      --enable-static \
      --disable-shared \
      --with-ssl \
      --with-ca-bundle=/etc/ssl/ca-certs.pem
    make V=1
    install -v src/curl{,-static}
    unset LDFLAGS
    make clean
    CFLAGS="$CFLAGS -fPIC" \
    ./configure \
      --prefix=/ \
      --enable-static \
      --enable-shared \
      --with-ssl \
      --with-ca-bundle=/etc/ssl/ca-certs.pem
    make V=1
}

package_curl() {
    pkgfiles=(
        bin/curl
    )
    depends=(
        ca-certs
    )

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdir}-tmp" install
    install -m0755 -v src/curl-static "${pkgdir}-tmp/bin/curl"
    cd "${pkgdir}-tmp"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dump "${pkgdir}"
}

package_libcurl() {
    pkgfiles=(
        "lib/libcurl.so.*"
    )
    depends=(
        ca-certs
        musl
        libressl
    )


    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dump "${pkgdir}"
}

package_libcurl-dev() {
    pkgfiles=(
        bin/curl-config
        include
        "lib/*.a"
        "lib/*.so"
        lib/pkgconfig
        share/aclocal
    )
    depends=(
        libcurl
    )

    cd "${srcdir}/${pkgbase}-${pkgver}"
    make DESTDIR="${pkgdir}-tmp" install
    cd "${pkgdir}-tmp"
    set -o pipefail
    find ${pkgfiles[@]} | cpio -dump "${pkgdir}"
}
