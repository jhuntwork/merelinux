pkgname=('ca-certificates')
pkgver=0.1
pkgrel=1
pkgdesc='Certficates of Certificate Authorities'
arch=('x86_64')
url=''
license=('BSD')
groups=('base')
depends=()
makedepends=()
options=()
changelog=ChangeLog
source=(
    'ca-bundle.crt'
)
sha256sums=(
    'f11ac083f34063861e5ee013f38b434274c74f6ebbe2d722020e09b47f654dae'
)

build() {
    cd "${srcdir}"
}

package() {
    cd "${srcdir}"
    install -d "${pkgdir}/etc/certs/"    
    install -m0644 ca-bundle.crt "${pkgdir}/etc/certs/"    
}
