#!/bin/bash
# shellcheck disable=SC2034,SC2154

pkgname=(libevent libevent-dev)
pkgver=2.1.12
pkgrel=1
pkgdesc='An event based library'
arch=(x86_64)
url='https://libevent.org/'
license=(BSD)
groups=()
depends=()
makedepends=(openssl-dev)
options=()
changelog=ChangeLog

source=(
    "https://github.com/libevent/libevent/releases/download/release-${pkgver}-stable/libevent-${pkgver}-stable.tar.gz"
)

sha256sums=(
    92e6de1be9ec176428fd2367677e61ceffc2ee1cb119035037a27d346b0403bb
)


build() {
    std_build
}

package_libevent() {
    pkgfiles=(
        usr/lib/lib*.so.*
    )
    depends=(
        "ld-musl-$(arch).so.1"
        libcrypto.so.1.1
        libssl.so.1.1
    )
    provides=(
        libevent_openssl-2.1.so.7
        libevent-2.1.so.7
        libevent_core-2.1.so.7
        libevent_pthreads-2.1.so.7
        libevent_extra-2.1.so.7
    )
    std_package
}

package_libevent-dev() {
    pkgfiles=(
        usr/lib/lib*.a
        usr/lib/lib*.so
        usr/lib/pkgconfig
        usr/include
    )
    depends=(
        "libevent=${pkgver}"
    )
    std_split_package
}
